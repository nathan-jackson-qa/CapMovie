GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /                           controllers.HomeController.index

GET     /movie/:id                  controllers.HomeController.moviePage(id: reactivemongo.bson.BSONObjectID)

GET     /Create                     controllers.Create.AddMovie()

GET     /delete/:id                 controllers.HomeController.deleteMovie(id: reactivemongo.bson.BSONObjectID)

GET     /update/:id                 controllers.HomeController.updateMovie(id: reactivemongo.bson.BSONObjectID)

GET     /search                     controllers.HomeController.search()

GET     /filter                     controllers.HomeController.filter(genre: String)

